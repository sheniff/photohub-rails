%li{ id: feed_item.id }
  = link_to gravatar_for(feed_item.user, size: 30), feed_item.user
  %span.user
    = link_to feed_item.user.name, feed_item.user
  %span.content
    = wrap(feed_item.title)
  %span.content
    = wrap(feed_item.description)
  %span.timestamp
    Created #{ time_ago_in_words(feed_item.created_at) } ago.
  = render 'shared/delete_album', object: feed_item
