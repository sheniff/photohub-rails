%li{ id: feed_item.id }
  = link_to gravatar_for(feed_item.user, size: 30), feed_item.user
  %span.user
    = link_to feed_item.user.name, feed_item.user
  %span.content
    = feed_item.title
  %span.content
    = feed_item.description
  %span.timestamp
    Created #{ time_ago_in_words(feed_item.created_at) } ago.
  - if current_user?(feed_item.user)
    = link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" }, title: feed_item.title
