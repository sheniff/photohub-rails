- provide(:title, @user.name)
.row
  %aside.span4
    %section
      %h1
        = gravatar_for @user
        = @user.name
    %section
      = render 'shared/stats'
  .span8
    = render 'follow_form' if signed_in?
    - if @user.albums.any?
      %h3= "Albums (#{@user.albums.count})"
      %ol.albums
        = render @albums
      = will_paginate @albums
