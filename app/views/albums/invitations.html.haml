- provide(:title, "Invitations")
.row
  %aside.span4
  .span8
    %h2
      Invitations for Album: #{@album.title}
      %small= "#{@invited_users.count} invitations"
    - if current_user?(@album.user)
      = link_to "Invite friend", '#', class: "btn btn-large btn-primary"
    %ul.invitations
      = render 'users/invitations', object: @invited_users
